package test;

import org.openqa.selenium.*;
import org.openqa.selenium.chrome.*;
import org.openqa.selenium.support.ui.Select;

import io.github.bonigarcia.wdm.WebDriverManager;

import org.junit.jupiter.api.Test;

class Selectvalue {
    String url = "file:///Users/mac/Downloads/Run%20Code/Run/html/Selectvalue/index.html";

    @Test
    void test() {
        WebDriverManager.chromedriver().setup();
        ChromeDriver driver = new ChromeDriver();
        driver.get(url);
        try {
            Thread.sleep(5000); // 1s = 1000mls
            Select dropdown = new Select(driver.findElement(By.id("myCarList")));
            dropdown.selectByIndex(1); //chọn tại chỉ mục đã cho
            ;
        } catch (Exception e) {
            System.out.println(e);
        }
    }
    
